<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LightTextEditorPlus.AvaloniaDemo.Views"
        mc:Ignorable="d"
        Width="1500" Height="700"
        x:Class="LightTextEditorPlus.AvaloniaDemo.Views.MainWindow"
        Icon="/Assets/Text.ico"
        Title="文本">
    <TabControl>
        <TabItem Header="调试">
            <TabItem.Content>
                <views:TextEditorDebugView Margin="0,25,0,0"/>
            </TabItem.Content>
        </TabItem>
        <TabItem Header="测试">
            <views:TextEditorTestView Margin="0,25,0,0"/>
        </TabItem>
        <TabItem Header="Markdown" IsSelected="True">
          <views:DualEditorUserControl/>
        </TabItem>
    </TabControl>
</Window>
