    <ProjectReference Include="..\TextVisionComparer\TextVisionComparer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\TestImage\**\*.png" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

