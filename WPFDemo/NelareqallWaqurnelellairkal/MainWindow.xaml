<Window x:Class="NelareqallWaqurnelellairkal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NelareqallWaqurnelellairkal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Width="100" Height="50" Margin="10,10,10,10"></Button>
            <ToggleButton x:Name="ToggleButton" Width="100" Height="50" Margin="10,10,10,10"></ToggleButton>

            <Popup StaysOpen="False" IsOpen="{Binding ElementName=ToggleButton,Path=IsChecked,Mode=OneWay}">
                <Border Background="White" Width="500" Height="500"></Border>
            </Popup>
        </StackPanel>
    </Grid>
</Window>
