<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SimpleWrite.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="25"
             x:Class="SimpleWrite.Views.Components.StatusBar"
             x:DataType="viewModels:StatusViewModel">
  <UserControl.Styles>
    <Style Selector="Button">
      <Setter Property="Foreground" Value="White"></Setter>
      <Setter Property="Padding" Value="0,0,0,0"></Setter>
      <Setter Property="Margin" Value="5,0,0,0"></Setter>

      <Style Selector="^:pointerover /template/ ContentPresenter">
        <Setter Property="TextBlock.Foreground" Value="#FFADADAD"></Setter>
      </Style>
    </Style>

    <Style Selector="TextBlock">
      <Setter Property="FontSize" Value="15"></Setter>
      <Setter Property="Foreground" Value="White"></Setter>
      <Setter Property="Margin" Value="5,0,0,0"></Setter>
    </Style>
  </UserControl.Styles>
  <Border BorderThickness="0,1,0,0" BorderBrush="#FF3D3D3D">
    <Grid ColumnDefinitions="*,Auto">
      <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="StatusBarTextBlock" Text="{Binding StatusText}"/>
      </StackPanel>
      <Button x:Name="DebugButton" Grid.Column="1" Margin="5,0,5,0" Click="DebugButton_OnClick">调试</Button>
    </Grid>
  </Border>
</UserControl>
