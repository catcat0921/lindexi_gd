<Project Sdk="Uno.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0-desktop</TargetFrameworks>

    <OutputType>Exe</OutputType>
    <UnoSingleProject>true</UnoSingleProject>

    <!-- Display name -->
    <ApplicationTitle>DotNetCampus.UISpy.Uno</ApplicationTitle>
    <!-- App Identifier -->
    <ApplicationId>com.companyname.dotnetcampus-uispy-uno</ApplicationId>
    <!-- Versions -->
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <ApplicationVersion>1</ApplicationVersion>
    <!-- Package Publisher -->
    <ApplicationPublisher>DotNetCampus.UISpy.Uno</ApplicationPublisher>
    <!-- Package Description -->
    <Description>DotNetCampus.UISpy.Uno powered by Uno Platform.</Description>

    <!--
      UnoFeatures let's you quickly add and manage implicit package references based on the features you want to use.
      https://aka.platform.uno/singleproject-features
    -->
    <UnoFeatures>
      Material;
      Dsp;
      MVUX;
      ThemeService;
    </UnoFeatures>
  </PropertyGroup>

</Project>
