<Page x:Class="ManipulationDemo.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ManipulationDemo"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid Background="Transparent" PointerPressed="UIElement_OnPointerPressed" PointerMoved="UIElement_OnPointerMoved" PointerReleased="UIElement_OnPointerReleased">
    <TextBlock x:Name="LogTextBlock" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
  </Grid>
</Page>
